{
  "autoload": {
    "psr-4": {
      "Shrikeh\\GuzzleMiddleware\\TimerLogger\\": "src"
    }
  },
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "bin-dir": "bin",
    "sort-packages": true,
    "platform": {
      "php": "5.6"
    }
  },
  "archive": {
      "exclude": ["*", "!/src"]
  },
  "require-dev": {
    "monolog/monolog": "^1.23",
    "phpspec/phpspec": "^3.4"
  },
  "require": {
    "guzzlehttp/guzzle": "^6.3",
    "litipk/php-bignumbers": "^0.7.3",
    "psr/log": "^1.0"
  }
}
